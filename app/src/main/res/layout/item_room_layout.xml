<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/ripple_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <ImageView
            android:src="@drawable/demo_image"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/imgHinh"
            android:cropToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.dell.appcuxa.CustomeView.RobLightText
            android:id="@+id/tvPurpose"
            tools:text="Tìm người thuê trọ"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content" />
        <com.example.dell.appcuxa.CustomeView.RobLightText
            android:id="@+id/tvPrice"
            android:gravity="end"
            tools:text="6tr2/phòng"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.example.dell.appcuxa.CustomeView.RobBoldText
        android:textColor="@color/black"
        android:textSize="17sp"
        android:id="@+id/tvName"
        tools:text="Cho thuê căn 32m2 giá rẻ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.dell.appcuxa.CustomeView.RobLightText
        android:id="@+id/tvAddress"
        tools:text="Nguyễn Trãi, quận Thanh Xuân, Hà Nội"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>