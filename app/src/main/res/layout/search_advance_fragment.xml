<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_item"
            android:src="@drawable/ic_back" />

        <com.example.dell.appcuxa.CustomeView.RobBoldText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="Tìm kiếm nâng cao"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:elevation="2dp" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Vị trí muốn tìm kiếm"
                android:layout_height="wrap_content" />
            <com.example.dell.appcuxa.CustomeView.RobEditText
                android:layout_width="match_parent"
                android:hint="Điền vào đây"
                android:layout_height="wrap_content" />
            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="Khoảng cách"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:weightSum="10"
                android:id="@+id/rgDistance"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="500m"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="1km"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="5km"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="8km"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="10km"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:text="Giá tiền"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:weightSum="8"
                android:id="@+id/rgPrice"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <RadioButton
                    android:layout_weight="1.75"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </RadioGroup>
            <LinearLayout
                android:weightSum="8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="@string/below_million"
                    android:layout_weight="1.45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="1 triệu ~ 2 triệu"
                    android:layout_weight="1.45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="2 triệu ~ 3 triệu"
                    android:layout_weight="1.45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:textColor="@color/black"
                    android:text="@string/above_three_millions"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Ưu tiên"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="8.3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_radio"
                    android:button="@android:color/transparent"
                    android:textColor="@drawable/change_color_checkbox"
                    android:padding="10dp"
                    android:text="Gần bệnh viện"/>
                 <View
                     android:layout_weight="0.1"
                     android:layout_width="0dp"
                     android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_radio"
                    android:button="@android:color/transparent"
                    android:textColor="@drawable/change_color_checkbox"
                    android:padding="10dp"
                    android:text="Gần bến xe"/>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_radio"
                    android:button="@android:color/transparent"
                    android:textColor="@drawable/change_color_checkbox"
                    android:padding="10dp"
                    android:text="Gần trường ĐH"/>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="10dp"/>
                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_radio"
                    android:button="@android:color/transparent"
                    android:textColor="@drawable/change_color_checkbox"
                    android:padding="10dp"
                    android:text="Gần cây ATM"/>

            </LinearLayout>

            <com.example.dell.appcuxa.CustomeView.RobBoldText
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Tiện nghi"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:id="@+id/cbAirConditioner"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_air_conditioner"
                    android:text="Điều hòa"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:id="@+id/cbNetwork"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_wifi"
                    android:text="Mạng"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:id="@+id/cbParking"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_garage"
                    android:text="Chỗ để xe"
                    android:textColor="@drawable/change_color_checkbox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:id="@+id/cbWc"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_toilet"
                    android:text="WC riêng"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:id="@+id/cbDoor"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_exit_door"
                    android:text="Cửa riêng"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:id="@+id/cbFreeTime"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_time"
                    android:text="Giờ tự do"
                    android:textColor="@drawable/change_color_checkbox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:id="@+id/cbChef"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_chef"
                    android:text="Bếp"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:id="@+id/cbFrigit"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_fridge"
                    android:text="Tủ lạnh"
                    android:textColor="@drawable/change_color_checkbox"/>

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:id="@+id/cbWashingMachine"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_exit_door"
                    android:text="Máy giặt"
                    android:textColor="@drawable/change_color_checkbox" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:id="@+id/cbBed"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_slumber"
                    android:text="Giường"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:id="@+id/cbTivi"
                    android:padding="10dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_washing_machine"
                    android:text="Tivi"
                    android:textColor="@drawable/change_color_checkbox" />

                <com.example.dell.appcuxa.CustomeView.RobCheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:id="@+id/cbPet"
                    android:button="@android:color/transparent"
                    android:background="@drawable/bg_radio"
                    android:drawableRight="@drawable/ic_dog"
                    android:text="Vật nuôi"
                    android:textColor="@drawable/change_color_checkbox" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.example.dell.appcuxa.CustomeView.RobButton
                    android:layout_width="0dp"
                    android:id="@+id/btnUpload"
                    android:text="Bắt đầu tìm kiếm"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_search_layout"
                    android:elevation="10dp"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>