<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login.LoginView.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <!-- <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v4.view.ViewPager>-->
        <com.santalu.autoviewpager.AutoViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/indicator"

            app:avp_indeterminate="true"/>
        <LinearLayout
            android:background="#9b000000"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >
            <com.example.dell.appcuxa.CustomeView.RobLightText
                android:layout_marginTop="90dp"
                android:textSize="50sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Cư xá"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.example.dell.appcuxa.CustomeView.RobLightText
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
                <Button
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_login_fb"
                    android:text="Đăng nhập bằng Facebook"
                    android:id="@+id/btnLoginFb"
                    android:layout_width="250dp"
                    android:layout_height="40dp" />
                <Button
                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_login_gg"
                    android:text="Đăng nhập bằng Google"
                    android:id="@+id/sign_in_button"
                    android:layout_width="250dp"
                    android:layout_height="40dp" />
                <com.example.dell.appcuxa.CustomeView.RobLightText
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:text="By continuing, you agree with our term and conditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>